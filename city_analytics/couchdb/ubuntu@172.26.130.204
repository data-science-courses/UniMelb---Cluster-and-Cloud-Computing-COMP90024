version: '3.7'

services:
  db:
    image: couchdb
    restart: always
    environment:
      COUCHDB_PORT_NUMBER: "5984"
      COUCHDB_CLUSTER_PORT_NUMBER: "9100"
      COUCHDB_BIND_ADDRESS: "0.0.0.0"
      COUCHDB_USER: "admin" 
      COUCHDB_PASSWORD: "admin"
      COUCHDB_SECRET: "mysecret"
    volumes:
      - ./mycouchdb:/opt/couchdb/data
 

  python:
    image: python
    restart: always
    
